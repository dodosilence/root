{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "dateFile",
      "filename": "/etc/logs/log_boot-",
      "pattern": "yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "category": "log_boot"
    }
  ],
  "replaceConsole": true,
  "levels": {
    "log_boot": "ALL"
  }
}